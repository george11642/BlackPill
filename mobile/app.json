{
  "expo": {
    "name": "Black Pill",
    "slug": "blackpill",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "description": "Be Honest About Yourself - AI-powered attractiveness analysis with actionable self-improvement tips.",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0F0F1E"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.blackpill.blackpill",
      "infoPlist": {
        "NSCameraUsageDescription": "Black Pill needs access to your camera to take photos for AI analysis.",
        "NSPhotoLibraryUsageDescription": "Black Pill needs access to your photo library to select photos for analysis.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "package": "com.blackpill.blackpill",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0F0F1E"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro",
      "output": "single"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Black Pill to access your camera to take photos for analysis."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Black Pill to access your photos to select images for analysis."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/icon.png",
          "color": "#FF0080",
          "sounds": []
        }
      ],
      "expo-dev-client",
      "expo-secure-store",
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": ""
      }
    }
  }
}

