# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Stripe Configuration
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key

# Resend Configuration
RESEND_API_KEY=your_resend_api_key
RESEND_FROM_EMAIL=noreply@black-pill.app
# Note: RESEND_FROM_EMAIL is also used for VAPID web push contact email

# App Configuration
NEXT_PUBLIC_APP_URL=https://black-pill.app
NEXT_PUBLIC_APP_NAME=BlackPill

# Expo Web App (Development Only)
# Set this to your Expo web development URL (typically http://localhost:8081)
# This is used by the "Try Web App" button during development
# In production, the button automatically uses /app route (same domain)
NEXT_PUBLIC_EXPO_WEB_URL=http://localhost:8081

# Database
DATABASE_URL=your_database_connection_string

# Cron Job Configuration
# This secret is stored in Supabase Vault and used by cron functions
# Set this to match the CRON_SECRET value stored in Supabase Vault
CRON_SECRET=your-cron-secret-key-here

# Web Push Notifications (VAPID)
# Public key is hardcoded in code, only private key needed here
VAPID_PRIVATE_KEY=sSG1amOZZ1vClBT46KAAqbVbxTb_r3j-LssfifJX5Hc

# Redis Configuration (for distributed rate limiting)
# Redis Labs (Redis Cloud) format: rediss://default:PASSWORD@HOST:PORT
# Note: Redis Labs requires TLS, so use rediss:// (with double 's') protocol
# Example: rediss://default:your_password@your-redis-host.redis.cloud:12345
blackpill_REDIS_URL=rediss://default:your_password@your-redis-host.redis.cloud:port
# Alternative name (either works)
REDIS_URL=rediss://default:your_password@your-redis-host.redis.cloud:port

# Environment
NODE_ENV=production

